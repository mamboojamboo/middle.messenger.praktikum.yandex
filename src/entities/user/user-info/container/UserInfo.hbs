<form class="{{ styles.user-info }}">
    <div>
        {{{ email }}}
        {{{ login }}}
        {{{ firstName }}}
        {{{ lastName }}}
        {{{ nickName }}}
        {{{ phone }}}
        {{{ avatar }}}
    </div>

    {{#if isEdit}}
        <div>
            <button class="{{ styles.user-info__save-button }}" type="submit" disabled>Save</button>
        </div>
    {{else}}
        <div class="{{ styles.user-info__buttons-container}}">
            <button
                id="change-data"
                class="{{ styles.user-info__button }}"
                type="button"
                data-main="CHANGE_DATA"
            >
                Change personal data
            </button>
            <button
                id="change-password"
                class="{{ styles.user-info__button }}"
                type="button"
                data-main="CHANGE_PASSWORD"
            >
                Change password
            </button>
        </div>
    {{/if}}
</form>
